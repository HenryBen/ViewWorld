<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.github.kongpf8848.viewworld.views.CenterTitleToolbar
        android:id="@+id/toolbar"
        style="@style/TKToolbarNaviationStyle"
        app:title="验证码"
        />

    <com.github.kongpf8848.viewworld.views.CodeEditText
        android:id="@+id/et_sms_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:inputType="number"
        android:singleLine="true"
        android:textColor="@color/c_ff333333"
        android:textSize="26sp"
        android:textStyle="bold"
        app:strokeBackground="@drawable/bg_code_edit"
        app:strokeHeight="56dp"
        app:strokeLength="4"
        app:strokePadding="20dp"
        app:strokeWidth="56dp" />

</LinearLayout>